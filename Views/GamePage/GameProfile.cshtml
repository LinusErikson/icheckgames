﻿
@{
    ViewBag.Title = "GameProfile";
}


@{ string url = TempData["CurrentUrl"].ToString();

    string[] split = url.Split('/');
    var id = split.Last();
}

<div id="divId" style="display: none" data-myvalue="@id"></div>


<div class="container">
    <div class="row">


        <!--Img and Description-->
        <div class="col-lg-4 col-sm-4 col-xs-6">
            <div class="list-group">
                <div class="list-group-item">
                    <h2 class="list-group-item-heading">
                        <strong id="gameName"></strong>
                    </h2>
                </div>
                <img id="proPic" class="img-responsive" />
                <span id="gameRelease" class="list-group"></span>
            </div>
        </div>



        <div class="col-lg-4 col-sm-4 col-xs-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Game Description</h3>
                </div>
                <div class="panel-body" id="gameDesc">

                </div>
            </div>
        </div>



        <div class="col-lg-4 col-sm-4 col-xs-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Available on:</h3>
                </div>
                <div class="panel-body" id="gamePlatforms">
                </div>
            </div>
        </div>


        <div class="col-lg-4 col-sm-4 col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Similar games:</h3>
                </div>
                <div class="panel-body" id="gameAlike">
                </div>
            </div>
        </div>


    </div>
</div>

<script src="~/scripts/jquery-2.2.3.min.js"></script>
<script src="~/scripts/GameProfile.js"></script>
